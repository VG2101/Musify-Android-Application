<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:id="@+id/cardViewId"
    android:foreground="@android:drawable/list_selector_background"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
        <ImageView android:layout_width="match_parent" android:layout_height="160dp" android:id="@+id/book_image_id" android:scaleType="centerCrop" android:padding="2dp" android:background="#ffffff"> </ImageView>
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/book_text_id" android:textColor="#010132" android:text="Title" android:textSize="13sp" android:gravity="center"> </TextView>
    </LinearLayout>

</androidx.cardview.widget.CardView>